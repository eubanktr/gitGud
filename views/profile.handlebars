<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Your profile:{{name}},{{age}},{{system}}</h3>

    <form class="form user-info-form">
      <div class="form-group">
        <label for="user-gamertag">Gamertag:</label>
        <label for="user-system">System you use:</label>
        <input class="form-input" type="text" id="user-info" name="user-info" />
      </div>
      <div class="form-group">
        <label for="user-games">Currently playing these games:</label>
        <input class="form-input" type="number" id="user-games" name="user-games" />
      </div>
      
      <div class="form-group">
        <label for="user-desc">Description:</label>
        <textarea class="form-input" id="user-desc" name="user-desc"></textarea>
      </div>
      
    </form>
  </div>

 

<script src="./js/profile.js"></script>