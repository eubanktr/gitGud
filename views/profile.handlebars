<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Your profile:</h3>

    <form class="form user-info-form">
      <div class="form-group">
        <label for="user-gamertag">Gamertag:</label>
        <label for="user-system">System you use:</label>
        <input class="form-input" type="text" id="user-info" name="user-info" />
      </div>
      <div class="form-group">
        <label for="user-games">Currently playing thse games:</label>
        <input class="form-input" type="number" id="user-games" name="user-games" />
      </div>
      <div class="form-group">
        <label for="user-desc">description:</label>
        <textarea class="form-input" id="user-desc" name="user-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if projects.length}}
  <div class="col-md-6 project-list">
    <h3>Current Projects:</h3>

    {{#each projects as |project|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{project.id}}">{{project.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{project.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
